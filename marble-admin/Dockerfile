# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t marble-admin`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system marble-admin && \
          adduser --system -G marble-admin marble-admin

COPY dist/marble-admin marble-admin
RUN chown -R marble-admin:marble-admin .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix marble-admin --omit=dev -f install

CMD [ "node", "marble-admin" ]
